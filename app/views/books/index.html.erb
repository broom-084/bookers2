<h2>User info</h2>

<%= image_tag @user.get_profile_image(100,100) %>

<table class="table">
  <tbody>
    <tr>
      <th>name</th>
      <th><%= @user.name %></th>
    </tr>
  
    <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
    </tr>
  </tbody>
</table>

<%= link_to edit_user_path(@user) do %>
  <i class="fa-solid fa-user-gear"></i>
<% end %>

<h1>New book</h1>

<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Opinion</h4>
  <%= f.text_area :body %>
	
  <%= f.submit 'Create Book' %>
<% end %>

<h2>Books</h2>

<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  
</table>