<%= render 'books/list', user: @user, book: @book_new %>

<h2>Book details</h2>

<table class="table">
  <tbody>
    <tr>
      <td>
        <%= link_to books_path(@book.id) do %>
          <%= image_tag @book.user.get_profile_image(100,100) %>
          <br>
          <%= @user.name %>
        <% end %>
      </td>
      
      <td>
        <%= link_to book_path(@book.id) do %>
          <%= @book.title %>
        <% end %>
      </td>
      
      <td><%= @book.body %></td>
    </tr>
  </tbody>
</table>