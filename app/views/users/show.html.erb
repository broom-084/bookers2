<div>
  <div>
    <%= render 'books/list', user: @user, book: @book_new %>
  </div>
  
  <div>
    <h2>Books</h2>
    
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>
      
      <tbody>
        <tr>
          <% @book.each do |book| %>
          <td>
            <%= link_to user_path(@user.id) do %>
              <%= image_tag book.user.get_profile_image(100,100) %>
            <% end %>
          </td>
          
          <td>
            <%= link_to book_path(book.id) do %>
              <%= book.title %>
            <% end %>
          </td>
          
          <td>
            <%= book.body %>
          </td>
          <% end %>
        </tr>
      </tbody>
    </table>
  </div>
</div>
