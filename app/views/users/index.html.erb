<div>
  <div>
    <%= render 'books/list', user: @user, book: @book_new %>
  </div>
  
  <div>
    <h2>Users</h2>

    <table class="table">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
        </tr>
      </thead>
  
      <tbody>
        <tr>
          <% @users.each do |user| %>
            <td>
              <%= image_tag user.get_profile_image(100,100) %>
              <%= user.name %>
            </td>
            <td>
              <%= link_to "Show", user_path(@user.id) %>
            </td>
          <% end %>
        </tr>
      </tbody>
    </table>
  </div>
</div>
